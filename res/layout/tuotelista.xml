<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
	<ScrollView
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    >
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:gravity="center_horizontal"
		    android:orientation="vertical" >
		
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" 
		        android:gravity="center_horizontal"
		        android:orientation="horizontal">
		        
		         <TextView android:id="@+id/tuoteTextView1" 
		         android:layout_width="390dp" 
		         android:layout_height="wrap_content" 
		         android:text="                      Tuote"
		         android:textStyle="bold"
		         android:textAppearance="?android:attr/textAppearanceMedium" />
		
		         <TextView
		         android:id="@+id/hintaTextView1"
		         android:layout_width="70dp"
		         android:layout_height="wrap_content"
		         android:text="Hinta"
		         android:textStyle="bold"
		         android:textAppearance="?android:attr/textAppearanceMedium" />
		         
		         <TextView android:id="@+id/tallennetaanTextView1" 
		         android:layout_height="wrap_content" 
		         android:layout_width="120dp"
		         android:text="Tallennetaan"
		         android:textStyle="bold"
		         android:textAppearance="?android:attr/textAppearanceMedium" />
		    </LinearLayout>
			
			<LinearLayout android:layout_width="match_parent"
			        android:layout_height="wrap_content" 
			        android:orientation="vertical"
			        android:gravity="center_horizontal"
		        	android:id="@+id/linLayoutTuotelista">
		    
		    </LinearLayout>
			
		    
			<LinearLayout android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal" 
			        android:orientation="horizontal">
			        
			        <TextView android:id="@+id/yhteensaTextView1" 
			        android:layout_width="290dp" 
			        android:layout_height="wrap_content" 
			        android:text="  YHTEENSÄ"
			        android:textStyle="bold"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
			        
			        <TextView android:id="@+id/yhteensaNumeroTextView1" 
			        android:layout_width="70dp" 
			        android:layout_height="wrap_content" 
			        android:textStyle="bold"
			        android:textAppearance="?android:attr/textAppearanceMedium"  />
			    
			</LinearLayout>
		
			<LinearLayout android:layout_width="match_parent"
			        android:layout_height="wrap_content" 
			        android:gravity="center_horizontal"
			        android:orientation="horizontal">
		
				<Button
				    android:id="@+id/tallennaKuittiButton"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
		            android:background="@drawable/blue_button"
		            style="@style/button_text"
		            android:onClick="onTallennaKuitti"
				    android:text="Tallenna" />
		
				<Button
				    android:id="@+id/skannaaKuittiButton"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:background="@drawable/blue_button"
		            style="@style/button_text"
		            android:onClick="onSkannaaKuitti"
				    android:text="Skannaa uudelleen" />
				
				<Button
				    android:id="@+id/peruutaKuittiButton"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
		            android:background="@drawable/blue_button"
		            style="@style/button_text"
		            android:onClick="onPeruutaTallennus"
				    android:text="Peruuta" />
		
			        
		    </LinearLayout>
		    
			<LinearLayout android:layout_width="match_parent"
			        android:layout_height="wrap_content" 
			        android:gravity="center_horizontal"
			        android:orientation="horizontal">
					<Button
				    android:id="@+id/lisaaUusiButton"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
		            android:background="@drawable/blue_button"
		            style="@style/button_text"
		            android:onClick="onLisaaUusiTuote"
				    android:text="Lisää uusi tuote" />
					
			</LinearLayout>
		</LinearLayout>
		
	</ScrollView>
</RelativeLayout>