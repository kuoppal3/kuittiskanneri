<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
  	<ImageView
   	    android:id="@+id/imageViewKuvanHyvaksyminen"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:src="@drawable/blue_button" />
    
    
   	<LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal">
			
		<Button
		    android:id="@+id/lueKuitinTuotteet"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	        android:background="@drawable/blue_button"
	        android:onClick="onHyvaksyKuva"
	        style="@style/button_text"
		    android:text="Lue kuitin tuotteet" />

		<Button
		    android:id="@+id/otaUusiKuvaButton"
		    style="@style/button_text"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/blue_button"
		    android:onClick="onSkannaaKuitti"
		    android:text="Ota uusi kuva" />

	</LinearLayout>

</LinearLayout>
